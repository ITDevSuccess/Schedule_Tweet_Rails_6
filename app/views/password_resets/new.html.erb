<div class="row mt-5">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h1>Password Reset</h1>
        <%= form_with url: password_reset_path do |form| %>
          <%# if form.object.errors.any? %>
<!--            <div class="alert alert-danger">-->
              <%# form.object.errors.full_messages.each do |messages| %>
<!--                <div class=""><span class="code">*</span> <%#= messages %></div>-->
              <%# end %>
<!--            </div>-->
          <%# end %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.text_field :email, class: 'form-control', placeholder: 'Your Email', required:true %>
          </div>
          <%= form.submit "Reset Pasword", class: 'btn btn-success'%>
        <% end %>
      </div>
    </div>

  </div>
</div>
